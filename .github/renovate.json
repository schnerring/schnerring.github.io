{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "npm": {
    "managerFilePatterns": ["/(^|/)package\\.hugo\\.json$/"],
    "rangeStrategy": "bump",
    "rebaseWhen": "behind-base-branch",
    "skipArtifactsUpdate": true,
    "ignorePaths": [
      "package.json",
      "**/node_modules/**",
      "**/bower_components/**",
      "**/vendor/**",
      "**/examples/**",
      "**/__tests__/**",
      "**/test/**",
      "**/tests/**",
      "**/__fixtures__/**"
    ]
  },
  "gomod": {
    "managerFilePatterns": ["/(^|/)go\\.mod$/"],
    "rangeStrategy": "bump"
  },
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["indirect"],
      "enabled": true,
      "groupName": "Hugo Modules"
    },
    {
      "extends": ["packages:linters"],
      "groupName": "linters"
    },
    {
      "extends": ["packages:postcss"],
      "groupName": "postcss packages"
    }
  ]
}
